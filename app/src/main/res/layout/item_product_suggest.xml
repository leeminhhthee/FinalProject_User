<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/productImgSug"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/apple_watch_s8" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/hot"
                android:gravity="top|right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/productImgSug"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:text="5.5"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="#4CAF50"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/productImgSug" />
                <ImageView
                    android:id="@+id/freeship"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/productImgSug"
                    app:srcCompat="@drawable/freeship_extra" />
            </LinearLayout>

            <TextView
                android:id="@+id/productNameSug"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/productImgSug"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/andada"
                android:text="Apple Watch S8 GPS 41mm mau hong"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productNameSug"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/productPriceSug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:text="Ä‘ 6.900.000"
                    android:textAlignment="viewStart"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="2"
                    android:text="Sold 4k+"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="8sp" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>